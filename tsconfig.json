{
  "compilerOptions": {
    /* Môi trường Node */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "types": ["node"],

    /* Thư mục */
    "rootDir": "src",
    "outDir": "dist",

    /* Chất lượng code */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
